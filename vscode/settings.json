{
    "editor.fontLigatures": true,
    "editor.fontFamily": "FuraCode Nerd Font Retina",
    "editor.fontSize": 19,
    "editor.minimap.enabled": false,
    "editor.hover.enabled": false,
    "editor.parameterHints.enabled": false,
    "workbench.editor.enablePreview": true,
    "editor.quickSuggestions": {
        "other": true,
        "comments": false,
        "strings": false
    },
    "editor.acceptSuggestionOnEnter": "on",
	"editor.acceptSuggestionOnCommitCharacter": false,
    "editor.quickSuggestionsDelay": 10,
    "editor.wordBasedSuggestions": true,
    "editor.autoClosingBrackets": "never",
    "editor.suggestOnTriggerCharacters": true,
    "editor.codeLens": false,
    "workbench.editor.labelFormat": "short",
    "files.exclude": {
        "**/.git": true,         // this is a default value
        "**/.DS_Store": true,    // this is a default value

        "**/node_modules": true,
        "**/target": true,
        "**/pkg": true,
    },
           
    /*
        VIM
    */
    "vim.leader": " ",
    "vim.handleKeys": {
        "<C-a>": false,
        "<C-f>": false,
    },
    "vim.camelCaseMotion.enable": true,
    "vim.normalModeKeyBindingsNonRecursive": [
        {
            "before": [ "<leader>", "j" ],
            "commands": [
                "editor.action.marker.nextInFiles"
            ]
        },
        {
            "before": [ "<leader>", "k" ],
            "commands": [
                "editor.action.marker.prevInFiles"
            ]
        },
        {
            "before": [ "<leader>", "h" ],
            "commands": [
                "editor.action.showHover"
            ]
        },

        {
            "before": [ "t", "t" ],
            "commands": [
                "workbench.action.files.showOpenedFileInNewWindow"
            ]
        },

        {
            "before": ["<leader>", "enter"],
            "commands": [
                "workbench.action.keepEditor"
            ]
        }    
    ],
    "typescript.updateImportsOnFileMove.enabled": "always",
    "workbench.colorTheme": "Ayu One Dark Pro | Mirage",
    "window.zoomLevel": 0,
    "todo-tree.tree.showScanModeButton": false,
    "rust-analyzer.inlayHints.parameterHints": false,
    "rust-analyzer.inlayHints.typeHints": false,
    "files.associations": {
        "*.css": "postcss"
    },
    "hediet.vscode-drawio.local-storage": {
        ".drawio-config": {
            "language": "",
            "customFonts": [],
            "libraries": "general;uml;er;bpmn;flowchart;basic;arrows2",
            "customLibraries": [
                "L.scratchpad"
            ],
            "plugins": [],
            "recentColors": [],
            "formatWidth": "240",
            "createTarget": false,
            "pageFormat": {
                "x": 0,
                "y": 0,
                "width": 850,
                "height": 1100
            },
            "search": true,
            "showStartScreen": true,
            "gridColor": "#d0d0d0",
            "darkGridColor": "#6e6e6e",
            "autosave": true,
            "resizeImages": null,
            "openCounter": 0,
            "version": 18,
            "unit": 1,
            "isRulerOn": false,
            "ui": ""
        }
    }
}